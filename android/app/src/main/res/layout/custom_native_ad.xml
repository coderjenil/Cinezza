<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="0dp">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/ad_app_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/app_name" />

        <!-- Headline -->
        <TextView
            android:id="@+id/ad_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ad_app_icon"
            android:layout_marginStart="8dp"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Test Ad : Google Ads" />

        <!-- Rating + Advertiser -->
        <LinearLayout
            android:id="@+id/rating_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_headline"
            android:layout_toEndOf="@id/ad_app_icon"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/ad_stars"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/ad_advertiser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="#666666"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Google LLC" />
        </LinearLayout>

        <!-- Media View -->
        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/rating_container"
            android:layout_marginTop="6dp" />

        <!-- Body -->
        <TextView
            android:id="@+id/ad_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_media"
            android:layout_marginTop="6dp"
            android:textColor="#333333"
            android:textSize="11sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Stay up to date with your ads. Check how your ads are performing." />

        <!-- Footer -->
        <LinearLayout
            android:id="@+id/ad_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_body"
            android:layout_marginTop="6dp"
            android:paddingBottom="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Store -->
            <TextView
                android:id="@+id/ad_store"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Google Play" />

            <!-- Price -->
            <TextView
                android:id="@+id/ad_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="#4CAF50"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="FREE" />

            <!-- CTA Button -->
            <Button
                android:id="@+id/ad_call_to_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                android:minWidth="80dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:backgroundTint="#1A73E8"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                tools:text="INSTALL" />
        </LinearLayout>

    </RelativeLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
